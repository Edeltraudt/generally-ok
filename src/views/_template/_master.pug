block variables
  - var assetPath = '/';
  - var title = 'generally ok';
  - var pageClass = '';
  - var isSubpage = false;

doctype html
html(lang='de')
  head
    title= title
    link(rel='stylesheet' href=assetPath+'css/styles.css')
    meta(charset='UTF-8')
    meta(name='viewport'  content='width=device-width, initial-scale=1')
    script(src='https://unpkg.com/scroll-out/dist/scroll-out.min.js')
  body.page(class=pageClass)
    if !isSubpage
      h1.page__title.title
        a.title__link(href='/')
          strong.mask-appear(data-scroll-plain) Generally
          span.mask-appear(data-scroll-plain) OK
    else
      h2.page__title.title
        a.title__link(href='/')
          strong.mask-appear(data-scroll-plain) Generally
          span.mask-appear(data-scroll-plain) OK

    .page__logo.logo(data-scroll-plain)

    .page__nav-spacer.nav--spacer
    nav.page__nav.nav
      button#skipNav.nav__skip Skip Navigation
      ul.nav__list
        li.nav--spacer
        li.nav__item
          button.nav__link.js-blog Blog
            span.nav__link__clone(aria-hidden='true') Blog
        li.nav__item
          button.nav__link.js-projects Projects
            span.nav__link__clone(aria-hidden='true') Projects
        li.nav__item
          a.nav__link
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32.6 31.8" id="icon-github">
              <title>Github Logo</title>
              <path fill-rule="evenodd" clip-rule="evenodd" d="M16.3 0C7.3 0 0 7.3 0 16.3c0 7.2 4.7 13.3 11.1 15.5.8.1 1.1-.4 1.1-.8v-2.8c-4.5 1-5.5-2.2-5.5-2.2-.7-1.9-1.8-2.4-1.8-2.4-1.5-1 .1-1 .1-1 1.6.1 2.5 1.7 2.5 1.7 1.5 2.5 3.8 1.8 4.7 1.4.1-1.1.6-1.8 1-2.2-3.6-.4-7.4-1.8-7.4-8.1 0-1.8.6-3.2 1.7-4.4-.1-.3-.7-2 .2-4.2 0 0 1.4-.4 4.5 1.7 1.3-.4 2.7-.5 4.1-.5 1.4 0 2.8.2 4.1.5 3.1-2.1 4.5-1.7 4.5-1.7.9 2.2.3 3.9.2 4.3 1 1.1 1.7 2.6 1.7 4.4 0 6.3-3.8 7.6-7.4 8 .6.5 1.1 1.5 1.1 3V31c0 .4.3.9 1.1.8 6.5-2.2 11.1-8.3 11.1-15.5C32.6 7.3 25.3 0 16.3 0z"></path>
